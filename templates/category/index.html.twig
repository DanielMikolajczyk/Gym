{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}

    <div class="px-5 py-3 container-lg bg-white rounded-lg shadow">
        <div class="d-flex flex-row justify-content-between align-items-end mb-3">
            <h1>Lista kategorii</h1>
            <div class="d-flex flex-row align-items-center">
                <i class="fa-solid fa-search me-2"></i>
                <input class="form-control me-4 w-50" type="search" placeholder="Szukaj...">
                <div>
                    <a href="{{ path('category_new') }}">
                        <button class="btn btn-primary">
                            <i class="fa-solid fa-plus"></i> Stwórz nową
                        </button>
                    </a>
                </div>
            </div>
        </div>

        <div class="">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nazwa</th>
                        <th>Kat. Nadrzędna</th>
                        <th>Ostateczna</th>
                        <th class="text-end">Opcje</th>
                    </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.name }}</td>
                        <td>{{ category.parent ? category.parent : 'Brak'}}</td>
                        <td>{{ category.final ? 'Tak' : 'Nie' }}</td>
                        <td class="text-end">
                            <a href="{{ path('category_show', {'id': category.id}) }}" class="text-decoration-none">
                                <button class="btn btn-outline-success">
                                    <i class="fa-solid fa-eye"></i> Szczegóły
                                </button>
                            </a>
                            <a href="{{ path('category_edit', {'id': category.id}) }}">
                                <button class="btn btn-outline-warning">
                                    <i class="fa-solid fa-pen-to-square"></i> Edytuj
                                </button>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>


    </div>

{% endblock %}
