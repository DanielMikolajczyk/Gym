{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <div class="px-5 py-3 container-lg bg-white rounded-lg shadow">
        <div class="d-flex flex-row justify-content-between align-items-end mb-3">
            <h1>Szczegóły kategorii: {{category.name}}</h1>
            <div class="d-flex flex-row">
                <a href="{{ path('category_index') }}" class="me-3">
                    <button class="btn btn-primary">Powrót do listy</button>
                </a>
                <a href="{{ path('category_edit',{'id' : category.id}) }}" class="me-3">
                    <button class="btn btn-warning">
                        <i class="fa-solid fa-pen-to-square"></i> Edytuj
                    </button>
                </a>
            </div>
        </div>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ category.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ category.name }}</td>
                </tr>
                <tr>
                    <th>Parent</th>
                    <td>{{ category.parent }}</td>
                </tr>
                <tr>
                    <th>Childs</th>
                    <td>{{ category.childs ? category.childs|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>Final</th>
                    <td>{{ category.final ? 'Yes' : 'No' }}</td>
                </tr>
            </tbody>
        </table>
    </div>

{% endblock %}
