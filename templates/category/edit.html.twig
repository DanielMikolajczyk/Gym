{% extends 'base.html.twig' %}

{% block title %}Edit Category{% endblock %}

{% block body %}
    <div class="px-5 py-3 container-lg bg-white rounded-lg shadow">
        <div class="d-flex flex-row justify-content-between align-items-end mt-2 mb-4">
            <h2>Edytuj kategorię: {{category.name}}</h2>
            <div class="d-flex flex-row">
                <a href="{{ path('category_index') }}" class="mr-3">
                    <button class="btn btn-primary">Powrót do listy</button>
                </a>
                {{ include('category/_delete_form.html.twig') }}
            </div>

        </div>



        {{ include('category/_form.html.twig', {'button_label': 'Edytuj'}) }}

    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('category_edit') }}
{% endblock %}