{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <div class="px-5 py-3 container-lg bg-white rounded-lg shadow">
        <div class="d-flex flex-row justify-content-between align-items-end mb-3">
            <h1>Lista rodzajów</h1>
            <div class="d-flex flex-row align-items-center">
                <i class="fa-solid fa-search mr-2"></i>
                <input class="form-control mr-4 w-50" type="search" placeholder="Szukaj...">
                <div>
                    <a href="{{ path('workout_kind_new') }}">
                        <button class="btn btn-primary">
                            <i class="fa-solid fa-plus"></i> Stwórz nowy
                        </button>
                    </a>
                </div>
            </div>
        </div>

        <div class="">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th class="text-right">Opcje</th>
                    </tr>
                </thead>
                <tbody>
                {% for workout_kind in workout_kinds %}
                    <tr>
                        <td>{{ workout_kind.id }}</td>
                        <td>{{ workout_kind.name }}</td>
                        <td class="text-right">
                            <a href="{{ path('workout_kind_show', {'id': workout_kind.id}) }}">
                                <button class="btn btn-outline-success">
                                    <i class="fa-solid fa-eye"></i> Szczegóły
                                </button>
                            </a>
                            <a href="{{ path('workout_kind_edit', {'id': workout_kind.id}) }}">
                                <button class="btn btn-outline-warning">
                                    <i class="fa-solid fa-pen-to-square"></i> Edytuj
                                </button>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}

