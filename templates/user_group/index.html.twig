{% extends 'base.html.twig' %}

{% block title %}UserGroup index{% endblock %}

{% block body %}
    
    <div class="px-5 py-3 container-lg bg-white rounded-lg shadow">
        <div class="d-flex flex-row justify-content-between align-items-right mb-3">
            <h2>Lista grup użytkowników</h2>
            <div class="d-flex flex-row align-items-center">
                <i class="fa-solid fa-search mr-2"></i>
                <input class="form-control mr-4 w-50" type="search" placeholder="Szukaj...">
                <div>
                    <a href="{{ path('user_group_new') }}">
                        <button class="btn btn-primary">
                            <i class="fa-solid fa-plus"></i> Dodaj
                        </button>
                    </a>
                </div>
            </div>
        </div>

        <div class="">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nazwa</th>
                        <th class="text-right">Opcje</th>
                    </tr>
                </thead>
                <tbody>
                {% for userGroup in user_groups %}
                    <tr>
                        <td>{{ userGroup.id }}</td>
                        <td>{{ userGroup.name }}</td>
                        <td class="text-right">
                            <a href="{{ path('user_group_show', {'id': userGroup.id}) }}">
                                <button class="btn btn-outline-success">
                                    <i class="fa-solid fa-eye"></i> Szczegóły
                                </button>
                            </a>
                            <a href="{{ path('user_group_edit', {'id': userGroup.id}) }}">
                                <button class="btn btn-outline-warning">
                                    <i class="fa-solid fa-pen-to-square"></i> Edytuj
                                </button>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">Nie znaleziono żadnych grup</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>


    </div>
{% endblock %}
