{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}

    <div class="px-5 py-3 container-lg bg-white rounded-lg shadow">
        <div class="d-flex flex-row justify-content-between align-items-right mb-3">
            <h2>Lista użytkowników</h2>
            <div class="d-flex flex-row align-items-center">
                <i class="fa-solid fa-search mr-2"></i>
                <input class="form-control mr-4 w-50" type="search" placeholder="Szukaj...">
                <div>
                    <a href="{{ path('user_new') }}">
                        <button class="btn btn-primary">
                            <i class="fa-solid fa-plus"></i> Dodaj
                        </button>
                    </a>
                </div>
            </div>
        </div>

        <div class="">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Imię</th>
                        <th>Nazwisko</th>
                        <th class="text-right">Opcje</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.firstName }}</td>
                        <td>{{ user.lastName }}</td>
                        <td class="text-right">
                            <a href="{{ path('user_show', {'id': user.id}) }}">
                                <button class="btn btn-outline-success">
                                    <i class="fa-solid fa-eye"></i> Szczegóły
                                </button>
                            </a>
                            <a href="{{ path('user_edit', {'id': user.id}) }}">
                                <button class="btn btn-outline-warning">
                                    <i class="fa-solid fa-pen-to-square"></i> Edytuj
                                </button>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">Nie znaleziono żadnych użytkowników</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>


    </div>
{% endblock %}